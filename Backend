const express = require('express');
const bodyParser = require('body-parser');

const app = express();
const PORT = 3000;

// Sample vegetable data
const vegetables = [
    { id: 1, name: 'Carrot', price: 2.5 },
    { id: 2, name: 'Tomato', price: 1.5 },
    { id: 3, name: 'Broccoli', price: 3.0 }
];

app.use(bodyParser.json());

// Endpoint to get all vegetables
app.get('/vegetables', (req, res) => {
    res.json(vegetables);
});

// Endpoint to buy a vegetable
app.post('/buy/:id', (req, res) => {
    const vegetableId = parseInt(req.params.id);
    const vegetable = vegetables.find(v => v.id === vegetableId);
    if (!vegetable) {
        return res.status(404).json({ message: 'Vegetable not found' });
    }
    // Here you can implement your logic for purchasing
    // For simplicity, let's just return a success message
    res.json({ message: `You bought ${vegetable.name}` });
});

app.listen(PORT, () => {
    console.log(`Server is running on http://localhost:${PORT}`);
});